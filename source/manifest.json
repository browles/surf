{
  "manifest_version": 2,

  "name": "Surf",
  "description": "This extension surfs.",
  "version": "1.0",

  "background": {
    "page": "surf.html"
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Surf"
  },

  "permissions": [
    "tabs"
  ],

  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"
}
